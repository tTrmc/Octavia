<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Music files are typically large and user manages them manually -->
        <exclude domain="file" path="Music/"/>
        <exclude domain="file" path="Download/"/>
        <!-- Include app preferences and playlists -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="octavia_database"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all app data for device transfer -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
    </device-transfer>
</data-extraction-rules>
